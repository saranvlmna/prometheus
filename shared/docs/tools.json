{
  "tags": [
    {
      "name": "tools",
      "description": "Available tools and integrations"
    }
  ],
  "paths": {
    "/tools/connected": {
      "get": {
        "tags": ["tools"],
        "summary": "List connected tools",
        "description": "Retrieve a list of all available connected tools and integrations",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Successfully retrieved tools list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tool"
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized - Invalid or missing token" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tool": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "description": "Tool unique identifier" },
          "name": { "type": "string", "description": "Tool name" },
          "description": { "type": "string", "description": "Tool description" },
          "category": {
            "type": "string",
            "enum": ["email", "calendar", "task", "jira", "slack"],
            "description": "Tool category"
          },
          "enabled": { "type": "boolean", "description": "Whether the tool is enabled" },
          "config": {
            "type": "object",
            "description": "Tool configuration"
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      }
    },
    "securitySchemes": {
      "accessToken": {
        "type": "apiKey",
        "in": "header",
        "name": "x-access-token"
      }
    }
  }
}
