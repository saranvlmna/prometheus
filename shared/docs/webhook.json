{
  "tags": [
    {
      "name": "webhooks",
      "description": "Webhook endpoints for external integrations"
    }
  ],
  "paths": {
    "/webhook/google/auth": {
      "get": {
        "tags": ["webhooks"],
        "summary": "Google OAuth callback",
        "description": "Callback endpoint for Google OAuth2 authentication",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "description": "Google OAuth authorization code",
            "schema": { "type": "string" }
          },
          {
            "name": "state",
            "in": "query",
            "required": false,
            "description": "CSRF state parameter",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Google authentication successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "enum": ["success"] },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid request or missing code" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/webhook/gmail": {
      "post": {
        "tags": ["webhooks"],
        "summary": "Gmail webhook notification",
        "description": "Receives push notifications from Gmail API for new messages",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "object",
                    "properties": {
                      "data": {
                        "type": "string",
                        "description": "Base64 encoded message data"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Webhook processed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "enum": ["received"] }
                  }
                }
              }
            }
          },
          "400": { "description": "Invalid webhook payload" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WebhookNotification": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["gmail", "google-auth", "slack"] },
          "timestamp": { "type": "string", "format": "date-time" },
          "data": { "type": "object" }
        }
      }
    }
  }
}
